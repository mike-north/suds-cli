{
  "name": "@suds-cli/code",
  "description": "Syntax-highlighted code viewer with scrollable viewport for Suds terminal UIs",
  "version": "0.1.0-alpha.0",
  "dependencies": {
    "@suds-cli/chapstick": "workspace:*",
    "@suds-cli/filesystem": "workspace:*",
    "@suds-cli/machine": "workspace:*",
    "@suds-cli/tea": "workspace:*",
    "@suds-cli/viewport": "workspace:*",
    "shiki": "^1.24.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run clean && tsc -p ./tsconfig.json",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "clean": "rm -rf dist",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}

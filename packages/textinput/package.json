{
  "name": "@suds-cli/textinput",
  "description": "Single-line text input component for Suds terminal UIs",
  "version": "0.1.0-alpha.1",
  "dependencies": {
    "@suds-cli/chapstick": "workspace:*",
    "@suds-cli/cursor": "workspace:*",
    "@suds-cli/key": "workspace:*",
    "@suds-cli/runeutil": "workspace:*",
    "@suds-cli/tea": "workspace:*",
    "clipboardy": "^4.0.0",
    "grapheme-splitter": "^1.0.4"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}

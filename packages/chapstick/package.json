{
  "name": "@suds-cli/chapstick",
  "description": "TypeScript port of Lip Gloss terminal styling DSL",
  "version": "0.1.0-alpha.0",
  "dependencies": {
    "chalk": "^5.4.1",
    "string-width": "^7.2.0",
    "supports-color": "^9.0.0",
    "terminal-reflowjs": "0.0.0-alpha.0"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run clean && tsc -p ./tsconfig.json",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "clean": "rm -rf dist",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run --passWithNoTests"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}

{
  "name": "@suds-cli/textarea",
  "description": "Multi-line text area component for Suds terminal UIs",
  "version": "0.0.1-alpha.0",
  "dependencies": {
    "@suds-cli/chapstick": "workspace:*",
    "@suds-cli/cursor": "workspace:*",
    "@suds-cli/key": "workspace:*",
    "@suds-cli/runeutil": "workspace:*",
    "@suds-cli/tea": "workspace:*",
    "clipboardy": "^4.0.0",
    "grapheme-splitter": "^1.0.4"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run clean && tsc -p ./tsconfig.json",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "clean": "rm -rf dist",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}

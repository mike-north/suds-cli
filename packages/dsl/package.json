{
  "name": "@boba-cli/dsl",
  "description": "Declarative DSL for building CLI applications with minimal ceremony",
  "version": "1.0.0-alpha.4",
  "dependencies": {
    "@boba-cli/chapstick": "workspace:*",
    "@boba-cli/code": "workspace:*",
    "@boba-cli/filepicker": "workspace:*",
    "@boba-cli/filetree": "workspace:*",
    "@boba-cli/help": "workspace:*",
    "@boba-cli/key": "workspace:*",
    "@boba-cli/list": "workspace:*",
    "@boba-cli/machine": "workspace:*",
    "@boba-cli/markdown": "workspace:*",
    "@boba-cli/paginator": "workspace:*",
    "@boba-cli/progress": "workspace:*",
    "@boba-cli/spinner": "workspace:*",
    "@boba-cli/statusbar": "workspace:*",
    "@boba-cli/stopwatch": "workspace:*",
    "@boba-cli/table": "workspace:*",
    "@boba-cli/tea": "workspace:*",
    "@boba-cli/textarea": "workspace:*",
    "@boba-cli/textinput": "workspace:*",
    "@boba-cli/timer": "workspace:*",
    "@boba-cli/viewport": "workspace:*"
  },
  "devDependencies": {
    "tsd": "^0.31.2",
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "check": "pnpm run check:lint-ts && pnpm run test",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run check:lint-ts",
    "check:lint-ts": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "fix:lint-ts": "eslint \"{src,test}/**/*.{ts,tsx}\" --fix",
    "generate:api-report": "api-extractor run --local",
    "test": "pnpm run test:ts && pnpm run test:types",
    "test:ts": "vitest run --passWithNoTests",
    "test:types": "tsd"
  },
  "sideEffects": false,
  "tsd": {
    "directory": "test-d"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}

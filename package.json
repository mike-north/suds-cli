{
  "name": "suds",
  "version": "0.0.0",
  "description": "Bubbles-inspired TUI components in TypeScript",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint:staged": "lint-staged",
    "build": "NX_TUI=false nx run-many -t build --exclude suds",
    "generate:api-report": "NX_TUI=false nx run-many -t generate:api-report --exclude suds",
    "generate:docs": "NX_TUI=false nx api-documenter",
    "test": "NX_TUI=false nx run-many -t test --exclude suds",
    "test:coverage": "NX_TUI=false nx run-many -t test:coverage --exclude suds",
    "check:packages": "NX_TUI=false nx run-many -t check:eslint,check:typecheck-tests,check:api-report",
    "check:workspace": "NX_TUI=false nx knip",
    "check:markdown": "markdownlint-cli2 \"**/*.md\"",
    "check": "pnpm check:packages && pnpm check:workspace",
    "fix": "NX_TUI=false nx run-many -t fix:lint,fix:format",
    "fix:markdown": "markdownlint-cli2 --fix \"**/*.md\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "demo": "pnpm -C examples start"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "nx": {
    "targets": {
      "knip": {
        "cache": true,
        "command": "knip",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "fix:lint": {
        "cache": true,
        "command": "eslint --fix \"**/*.{js,ts,json,md,mts,cts,mjs,cjs}\"",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "fix:format": {
        "cache": true,
        "command": "prettier --write \"**/*.{js,ts,json,md,mts,cts,mjs,cjs}\"",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "api-documenter": {
        "cache": true,
        "command": "api-documenter markdown --input-folder temp --output-folder docs",
        "dependsOn": [
          {
            "projects": "packages-*",
            "target": "generate:api-report"
          }
        ],
        "inputs": [
          "{workspaceRoot}/temp/**/*.api.json"
        ],
        "outputs": [
          "{workspaceRoot}/docs/**/*.md"
        ]
      }
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@microsoft/api-documenter": "^7.28.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "knip": "^5.73.0",
    "lint-staged": "^15.5.2",
    "markdownlint-cli2": "^0.20.0",
    "nx": "^22.2.0",
    "prettier": "^3.7.4",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.49.0"
  }
}

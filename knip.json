{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": [
    "@vitest/coverage-v8",
    "@commitlint/cli",
    "@commitlint/types",
    "clipboardy",
    "supports-color",
    "syncpack"
  ],
  "ignoreFiles": ["./examples/filetree/**/*"],
  "ignoreBinaries": ["test:graceful-degradation", "test:browser"],
  "workspaces": {
    ".": {
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "packages/*": {
      "entry": ["src/index.ts", "test/**/*.test.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    }
  }
}
